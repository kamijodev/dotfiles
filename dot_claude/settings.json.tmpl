{
  "permissions":{
    "allow": [
      "Bash",
      "ExitPlanMode",
      "NotebookEdit",
      "Skill",
      "WebFetch",
      "WebSearch",
      "Write",
      "Update",
      "Edit",
      "Plugin:*"
    ],
    "deny": [],
    "defaults": {
      "mode": "PlanAndExecute",
      "language": "en",
      "response_format": "markdown",
      "tone": "professional"
    }
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          { "type": "command", "command": "~/.claude/hooks/notify-stop.sh" }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          { "type": "command", "command": "~/.claude/hooks/notify.sh 'Claude Code' '許可が必要です'" }
        ]
      }
    ]
  }
}
