    window-rule {
        geometry-corner-radius 20 // Set every window radius to 20
        clip-to-geometry true
    }

    window-rule {
        match app-id="org.gnome.Nautilus"
        open-floating true
    }

    window-rule {
        match app-id="com.gabm.satty"
        open-floating true
    }


    layer-rule {
        match namespace="^noctalia-wallpaper*"
        place-within-backdrop true
    }
